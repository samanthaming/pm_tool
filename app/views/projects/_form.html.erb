<ul>
  <% @project.errors.full_messages.each do |project| %>
    <li><%= project %></li>
  <% end %>
</ul>

<%= form_for @project do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </div>

  <%= f.submit %>
<% end %>
